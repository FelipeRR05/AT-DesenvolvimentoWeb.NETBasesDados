@page
@model AgenciaTurismo.Pages.CreateCidadeDestinoModel
@{
    ViewData["Title"] = "Cadastrar Cidade de Destino";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success">@Model.Message</div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CidadeVM.Nome" class="control-label"></label>
                <input asp-for="CidadeVM.Nome" class="form-control" />
                <span asp-validation-for="CidadeVM.Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CidadeVM.PaisId" class="control-label"></label>
                <select asp-for="CidadeVM.PaisId" class="form-control" asp-items="@Model.PaisesSelectList">
                    <option value="">-- Selecione um País --</option>
                </select>
                <span asp-validation-for="CidadeVM.PaisId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>