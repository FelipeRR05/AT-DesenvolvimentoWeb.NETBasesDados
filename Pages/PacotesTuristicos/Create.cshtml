@page
@model AgenciaTurismo.Pages.PacotesTuristicos.CreateModel

@{
    ViewData["Title"] = "Criar Pacote Turístico";
}

<h1>Criar Pacote Turístico</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.Titulo" class="control-label"></label>
                <input asp-for="PacoteVM.Titulo" class="form-control" />
                <span asp-validation-for="PacoteVM.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.Descricao" class="control-label"></label>
                <textarea asp-for="PacoteVM.Descricao" class="form-control"></textarea>
                <span asp-validation-for="PacoteVM.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.DataInicio" class="control-label"></label>
                <input asp-for="PacoteVM.DataInicio" class="form-control" type="date" />
                <span asp-validation-for="PacoteVM.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.DuracaoDias" class="control-label"></label>
                <input asp-for="PacoteVM.DuracaoDias" class="form-control" />
                <span asp-validation-for="PacoteVM.DuracaoDias" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.CapacidadeMaxima" class="control-label"></label>
                <input asp-for="PacoteVM.CapacidadeMaxima" class="form-control" />
                <span asp-validation-for="PacoteVM.CapacidadeMaxima" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PacoteVM.Preco" class="control-label"></label>
                <input asp-for="PacoteVM.Preco" class="form-control" />
                <span asp-validation-for="PacoteVM.Preco" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Destinos</label>
                <div class="p-2 border rounded" style="max-height: 200px; overflow-y: auto;">
                    @foreach (var destino in Model.DestinosData)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="PacoteVM.SelectedDestinos"
                                   value="@destino.DestinoId"
                                   id="destino-@destino.DestinoId" />
                            <label class="form-check-label" for="destino-@destino.DestinoId">
                                @destino.Nome
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}