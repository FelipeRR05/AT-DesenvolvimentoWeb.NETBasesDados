@model AgenciaTurismo.Models.PacoteTuristico

<div class="card h-100 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">@Model.Titulo</h5>
    </div>
    <div class="card-body d-flex flex-column">
        <p class="card-text flex-grow-1">@Model.Descricao</p>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item">Data de Início: @Model.DataInicio.ToString("dd/MM/yyyy")</li>
            <li class="list-group-item">Preço: <strong>@Model.Preco.ToString("C")</strong></li>
        </ul>
        <a asp-page="/PacotesTuristicos/Details" asp-route-id="@Model.Id" class="btn btn-outline-primary mt-auto">Ver Detalhes</a>
    </div>
</div>